<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="458dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/objectiveValueText"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="目的の素早さ"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="60dp" />

            <EditText
                android:id="@+id/objectiveValue"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="@string/objectiveValue"
                android:inputType="number"
                android:textAlignment="textStart"
                tools:layout_editor_absoluteX="132dp"
                tools:layout_editor_absoluteY="48dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/baseStatsText"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="種族値"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="60dp" />

            <EditText
                android:id="@+id/baseStats"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="@string/baseStats"
                android:inputType="number"
                android:textAlignment="textStart"
                tools:layout_editor_absoluteX="132dp"
                tools:layout_editor_absoluteY="48dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/individualValueText"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="個体値"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="60dp" />

            <EditText
                android:id="@+id/individualValue"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="@string/individualValue"
                android:inputType="number"
                tools:layout_editor_absoluteX="132dp"
                tools:layout_editor_absoluteY="48dp" />

            <Spinner
                android:id="@+id/individualValueSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/levelText"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="レベル"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="60dp" />

            <EditText
                android:id="@+id/level"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="@string/level"
                android:inputType="number"
                tools:layout_editor_absoluteX="132dp"
                tools:layout_editor_absoluteY="48dp" />

            <Spinner
                android:id="@+id/levelSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>

        </LinearLayout>

